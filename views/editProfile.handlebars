<h2>Edit Profile</h2>
<div class="form-wrapper">
<form id='editProfile-form' action='/user/editProfile/:{{_id}}' method='POST'>
	<label class='button_text' for='firstNameInput'>First Name: </label>
	<input type='text' id='firstNameInput' name='firstNameInput' value="{{firstName}}"/>

	<label class='button_text' for='lastNameInput'>Last Name: </label>
	<input type='text' id='lastNameInput' name='lastNameInput' value="{{lastName}}"/>

	<label class='button_text' for='emailAddressInput'>Email: </label>
	<input type='email' id='emailAddressInput' name='emailAddressInput' value="{{email}}"/>

	<label class='button_text' for='passwordInput'>Password: </label>
	<input type='password' id='passwordInput' name='passwordInput' value="{{password}}"/>

	<label class='button_text' for='confirmPasswordInput'>Confirm Password: </label>
	<input type='password' id='confirmPasswordInput' name='confirmPasswordInput' />

	<label class='button_text' for='ageInput'>Age:</label>
	<input type='number' id='ageInput' name='ageInput' value="{{age}}"/>

    <label class='button_text' for="bioInput">Bio:</label>
    <textarea id="bioInput" name="bioInput" rows="4" cols="50">{{bio}}</textarea>

    <label class='button_text' for="imglinkInput">Image Link:</label>
    <input type="text" id="imglinkInput" name="imglinkInput" value="{{imgLink}}"/>

	<input class='button' type='submit' />
</form>
</div>
<div class="link-wrapper">
    <a href='/user/:{{_id}}'>Cancel</a>
</div>