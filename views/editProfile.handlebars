<form id='registration-form' action='/user/register' method='PUT'>
	<label class='button_text' for='firstNameInput'>First Name: </label>
	<input type='text' id='firstNameInput' name='firstNameInput' />

	<label class='button_text' for='lastNameInput'>Last Name: </label>
	<input type='text' id='lastNameInput' name='lastNameInput' />

	<label class='button_text' for='emailAddressInput'>Email: </label>
	<input type='email' id='emailAddressInput' name='emailAddressInput' />

	<label class='button_text' for='passwordInput'>Password: </label>
	<input type='password' id='passwordInput' name='passwordInput' />

	<label class='button_text' for='confirmPasswordInput'>Confirm Password: </label>
	<input type='password' id='confirmPasswordInput' name='confirmPasswordInput' />

	<label class='button_text' for='ageInput'>Age:</label>
	<input type='number' id='ageInput' name='ageInput' />

    <label class='button_text' for="bioInput">Bio:</label>
    <textarea id="bioInput" name="bioInput" rows="4" cols="50"></textarea>

    <label class='button_text' for="imglinkInput">Image Link:</label>
    <input type="text" id="imglinkInput" name="imglinkInput" />

	<input class='button' type='submit' />
</form>
